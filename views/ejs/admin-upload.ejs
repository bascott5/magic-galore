<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/admin.css">
    <script defer src="/scripts/alpine.min.js"></script>
    <script src="/scripts/admin.js"></script>
    <title>Magic Galore - Admin Upload</title>
</head>
<body>
    <nav>
        <a href="/"><img class="logo" src="/assets/logo.svg" alt="Logo"></a>
        <div>
            <a href="/admin/list-products">Products</a>
            <a href="/admin/upload-products">Upload</a>
            <a href="/">Logout</a>
        </div>
    </nav>
    <main class="admin-upload" x-data="upload">
        <form action="/admin/upload-products" method="POST" enctype="multipart/form-data" x-bind="submitJson">
            <div class="file-upload">
                <label for="json">Upload a .json file...</label>
                <input type="file" name="uploads" id="json" accept=".json" x-bind="fileChange">
            </div>
            <template x-for="(jsonFile, index) in jsonFiles">
                <section class="json-container">
                    <div :id="index" x-bind="clickFile">
                        <p x-text="jsonFile.name"></p>
                    </div>
                </section>
            </template>
            <button type="submit" class="upload-submit">Submit</button>
        </form>
    </main>
</body>
</html>